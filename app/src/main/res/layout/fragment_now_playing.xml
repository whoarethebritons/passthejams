<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.passthejams.app.NowPlayingFragment">

    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:minHeight="?android:actionBarSize"
            android:background="?attr/colorPrimary" />
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/nowPlayingArt"
            android:src="@drawable/default_album" android:contentDescription="nowplaying"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Queue"
            android:onClick="showQueue"
            android:id="@+id/button" android:layout_below="@+id/my_toolbar" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


